<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.haroonghawsi.assignment42.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/myBlog"
        android:id="@+id/myBlog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/uName"
        android:id="@+id/uName"
        android:layout_below="@+id/myBlog"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/eName"
        android:layout_alignBottom="@+id/uName"
        android:layout_alignStart="@+id/myBlog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lComment"
        android:id="@+id/lComment"
        android:layout_below="@+id/uName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_alignEnd="@+id/uName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/eComment"
        android:layout_alignBottom="@+id/lComment"
        android:layout_alignStart="@+id/eName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_submit"
        android:id="@+id/btn_submit"
        android:layout_below="@+id/eComment"
        android:layout_alignEnd="@+id/eComment"
        android:layout_marginTop="21dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AllEntriesView"
        android:id="@+id/AllEntriesView"
        android:layout_below="@+id/btn_submit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="true"
        android:scrollbarStyle="insideInset"
        />


</RelativeLayout>
