<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/RelativeLayout"
    tools:context="com.example.haroonghawsi.assignment62.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/event_name"
        android:id="@+id/event_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/event_place"
        android:id="@+id/event_place"
        android:layout_below="@+id/event_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_eventName"
        android:layout_above="@+id/event_place"
        android:layout_toRightOf="@+id/event_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_spinner"
        android:layout_alignBottom="@+id/event_place"
        android:layout_alignRight="@+id/edit_eventName"
        android:layout_alignEnd="@+id/edit_eventName"
        android:layout_alignLeft="@+id/edit_eventName"
        android:layout_alignStart="@+id/edit_eventName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/event_date"
        android:id="@+id/event_date"
        android:layout_below="@+id/event_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edit_date"
        android:layout_alignBottom="@+id/event_date"
        android:layout_alignLeft="@+id/place_spinner"
        android:layout_alignStart="@+id/place_spinner"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/event_time"
        android:id="@+id/event_time"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edit_time"
        android:layout_alignBottom="@+id/event_time"
        android:layout_alignLeft="@+id/edit_date"
        android:layout_alignStart="@+id/edit_date" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Submit"
        android:id="@+id/btn_Submit"
        android:layout_below="@+id/event_time"
        android:layout_alignLeft="@+id/edit_time"
        android:layout_alignStart="@+id/edit_time" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_data"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btn_Submit"
        android:layout_alignRight="@+id/edit_time"
        android:layout_alignEnd="@+id/edit_time" />
<!--
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configure_display"
        android:id="@+id/configure_display"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
-->

</RelativeLayout>
